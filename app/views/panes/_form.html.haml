= form_for @pane do |f|
  - if @pane.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pane.errors.count, "error")} prohibited this pane from being saved:"
      %ul
        - @pane.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :settings
    = f.text_field :settings
  .actions
    = f.submit 'Save'
